{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "rootDir": ".",
    "allowUnreachableCode": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "index.ts",
    "plugin/*",
    "plugin/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
