doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="/reset.css")
    link(rel="stylesheet", href="/style.css")
    title #{sitename}
  body.post
    .header
    .post.w3-mobile
      if date !== undefined
        div Posted #{date}.
      each tag in tags
        if tag !== '_root'
          div
            span Tagged &nbsp;
            a(href="/tags/" + tag) #{tagGet(tag).rootPath}
            span .
      each att in attachments || []
        div Attached #{att}
      block template
      block teaser
      block contents

